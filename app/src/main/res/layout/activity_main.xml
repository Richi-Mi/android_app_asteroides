<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="@string/Asteroides"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        style="@style/estilo_boton"
        android:onClick="mostrarPreferencias"
        android:text="@string/Jugar" />

    <Button
        android:id="@+id/btn_configurar"
        style="@style/estilo_boton"
        android:onClick="lanzarPreferencias"
        android:text="@string/Configurar" />

    <Button
        android:id="@+id/button3"
        style="@style/estilo_boton"
        android:onClick="lanzarAcercaDe"
        android:text="@string/AcercaDe" />

    <Button
        android:id="@+id/btn_salir"
        style="@style/estilo_boton.alternativo"
        android:onClick="salirApp"
        android:text="@string/Salir"
        android:textColor="#FF7AA7"
        android:textStyle="bold" />

</LinearLayout>